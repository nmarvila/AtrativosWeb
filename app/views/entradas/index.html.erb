<%= render "/layouts/menu" %>

<div class="ui segment">
    <h2 class="ui centered header">Listagem de Entradas do Atrativo: <%= @atrativo.nome %></h2>
    <table class="ui very compact celled table">
        <thead>
            <tr>
                <th class="center aligned">Tipo</th>
                <th class="center aligned">Data</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @entradas.each do |e| %>
                <tr>
                    <td><%= e.tipo.capitalize %></td>
                    <td><%= e.data.strftime("%d/%m/%Y") %></td>
                    <td class="center aligned">
                        <a href="<%= pj_atrativo_entrada_url(params["pj_id"], e.atrativo_id, e.id) %>" class="ui blue button">
                            <i class="eye icon"></i>
                            Visualizar</a></td>
                    <td class="center aligned">
                        <a href="<%= edit_pj_atrativo_entrada_url(params["pj_id"], e.atrativo_id, e.id) %>" class="ui orange button">
                            <i class="edit icon"></i>
                            Editar</a></td>
                    <%= form_tag pj_atrativo_entrada_url(params["pj_id"], e.atrativo_id, e.id), method: :delete do %>
                        <td class="center aligned"><button name="button" type="submit" class="ui red button">
                            <i class="user times icon"></i>
                            Excluir</button></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
        <tfoot class="full-width">
            <tr>
                <th></th>
                <th colspan="7">
                    <a 
                    href="<%= new_pj_atrativo_entrada_url(session[:pj_id], session[:atrativo_id]) %>" 
                    class="ui right floated small blue labeled icon button">
                        <i class="ticket icon"></i> 
                        Adicionar Entrada</a>
              </th>
            </tr>
        </tfoot>
    </table>
</div>