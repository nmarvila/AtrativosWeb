<div class="ui large secondary pointing menu">
  <div class="header item">
    Atrativos Web
  </div>
    <a class="item <%= if session[:page] === 'home' then 'active' end %>" href="<%= root_url %>">
      Home
    </a>
    <% if session[:user_id] != nil %>
    <a class="item <%= if session[:page] === 'atrativo' then 'active' end %>" href="<%= pj_atrativos_url(session[:pj_id]) %>">
      Atrativos
    </a>
    <% end %>
    <% if session[:atrativo_id] != nil %>
    <a class="item <%= if session[:page] === 'entrada' then 'active' end %>" href="<%= pj_atrativo_entradas_url(session[:pj_id], session[:atrativo_id]) %>">
      Entradas
    </a>
    <% end %>
    <% if session[:user_id] != nil && session[:user_type] = "pj" %>
    <a class="item <%= if session[:page] === 'funcionario' then 'active' end %>" href="<%= pj_funcionarios_url(session[:pj_id]) %>">
      Funcion√°rios
    </a>
    <% end %>
    <% if session[:user_id] != nil %>
    <div class="right menu">
      <a class="ui item" href="/logout">
        Logout
      </a>
    </div>
    <% else %>
    <div class="right menu">
      <a class="ui item" href="/login">
        Login
      </a>
    </div>
    <% end %>
</div>